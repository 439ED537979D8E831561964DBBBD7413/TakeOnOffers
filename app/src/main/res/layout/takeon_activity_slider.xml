<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.loginregister.LoginActivity"
    >

  <android.support.v4.view.ViewPager
      android:id="@+id/view_pager"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/_110sdp"
      android:background="@color/colorPrimary"
      android:orientation="vertical"
      >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp"
        android:background="@drawable/drop_shadow"
        />

    <com.takeon.offers.view.CircleIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_36sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:ci_drawable="@drawable/ico_dot_fill_svg"
        app:ci_drawable_unselected="@drawable/ico_dot_unfill_svg"
        app:ci_height="@dimen/_8sdp"
        app:ci_width="@dimen/_8sdp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        >

      <android.support.v7.widget.AppCompatButton
          android:id="@+id/btnSkip"
          android:layout_width="@dimen/_100sdp"
          android:layout_height="@dimen/_32sdp"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_marginLeft="@dimen/_10sdp"
          android:layout_marginStart="@dimen/_10sdp"
          android:background="@drawable/btn_shadow_background"
          android:text="@string/str_skip"
          android:textAllCaps="false"
          android:textColor="@color/colorWhite"
          android:textSize="@dimen/_11sdp"
          />

      <android.support.v7.widget.AppCompatButton
          android:id="@+id/btnLogin"
          android:layout_width="@dimen/_100sdp"
          android:layout_height="@dimen/_32sdp"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:layout_gravity="end"
          android:layout_marginEnd="@dimen/_10sdp"
          android:layout_marginRight="@dimen/_10sdp"
          android:background="@drawable/btn_shadow_background"
          android:text="@string/str_login"
          android:textAllCaps="false"
          android:textColor="@color/colorWhite"
          android:textSize="@dimen/_11sdp"
          />

    </RelativeLayout>

  </LinearLayout>

</LinearLayout>