<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_1sdp"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="@dimen/_15sdp"
      android:background="@drawable/main_shadow_background"
      android:gravity="start"
      android:orientation="vertical"
      android:padding="@dimen/_2sdp"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_95sdp"
        android:layout_marginStart="@dimen/_95sdp"
        android:gravity="start"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp"
        >

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/_24sdp"
          android:gravity="center"
          android:padding="@dimen/_2sdp"
          >

        <TextView
            android:id="@+id/txtBusinessName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/llRight"
            android:layout_toStartOf="@+id/llRight"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center|start"
            android:lines="1"
            android:text=""
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_14sdp"
            />

        <LinearLayout
            android:id="@+id/llRight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal"
            >

          <ImageView
              android:id="@+id/imgVegNonVeg"
              android:layout_width="@dimen/_24sdp"
              android:layout_height="@dimen/_24sdp"
              android:contentDescription="@string/app_name"
              android:padding="@dimen/_2sdp"
              android:src="@drawable/ico_veg_non_veg"
              android:visibility="gone"
              />

          <ImageView
              android:id="@+id/imgFavorite"
              android:layout_width="@dimen/_24sdp"
              android:layout_height="@dimen/_24sdp"
              android:contentDescription="@string/app_name"
              android:padding="@dimen/_3sdp"
              android:src="@drawable/ico_like_un_fill_svg"
              />
        </LinearLayout>

      </RelativeLayout>

      <TextView
          android:id="@+id/txtArea"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:fontFamily="@font/roboto_medium"
          android:gravity="center|start"
          android:padding="@dimen/_2sdp"
          android:text=""
          android:textColor="@color/jumbo"
          android:textSize="@dimen/_9sdp"
          />

      <TextView
          android:id="@+id/txtCuisines"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:fontFamily="@font/roboto_bold"
          android:gravity="center|start"
          android:lines="1"
          android:padding="@dimen/_2sdp"
          android:text=""
          android:textColor="@color/oil"
          android:textSize="@dimen/_9sdp"
          />

      <TextView
          android:id="@+id/txtRedeem"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:fontFamily="@font/roboto_medium"
          android:gravity="center|start"
          android:lines="1"
          android:padding="@dimen/_2sdp"
          android:text=""
          android:textColor="@color/jumbo"
          android:textSize="@dimen/_9sdp"
          />

      <TextView
          android:id="@+id/txtSave"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginBottom="@dimen/_10sdp"
          android:layout_marginEnd="@dimen/_5sdp"
          android:layout_marginRight="@dimen/_5sdp"
          android:fontFamily="@font/roboto_bold"
          android:gravity="center|end|bottom"
          android:lines="1"
          android:padding="@dimen/_2sdp"
          android:text=""
          android:textColor="@color/colorPrimaryDark"
          android:textSize="@dimen/_9sdp"
          />

    </LinearLayout>
  </LinearLayout>

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_gravity="center|start|top"
      android:layout_marginLeft="@dimen/_10sdp"
      android:layout_marginStart="@dimen/_10sdp"
      android:gravity="center"
      android:orientation="vertical"
      android:padding="@dimen/_3sdp"
      >

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="@dimen/_85sdp"
        android:layout_height="@dimen/_85sdp"
        android:background="@drawable/gradient_background"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/app_logo"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:gravity="center"
        >

      <TextView
          android:id="@+id/txtOffer"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:fontFamily="@font/roboto_medium"
          android:gravity="center|start"
          android:lines="1"
          android:padding="@dimen/_2sdp"
          android:text=""
          android:textColor="@color/colorPrimaryDark"
          android:textSize="@dimen/_9sdp"
          />

      <TextView
          android:id="@+id/txtDistance"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:fontFamily="@font/roboto_medium"
          android:gravity="center|end"
          android:lines="1"
          android:padding="@dimen/_2sdp"
          android:text=""
          android:textColor="@color/colorPrimaryDark"
          android:textSize="@dimen/_9sdp"
          tools:ignore="RelativeOverlap"
          />

    </RelativeLayout>

  </LinearLayout>

</FrameLayout>