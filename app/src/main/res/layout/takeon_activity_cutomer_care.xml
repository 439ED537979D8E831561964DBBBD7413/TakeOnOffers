<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <!-- Top Layout -->
  <android.support.v7.widget.Toolbar
      android:id="@+id/main_toolbar"
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:layout_gravity="center|top"
      android:background="@drawable/toolbar_gradient"
      android:fitsSystemWindows="true"
      android:gravity="center"
      app:popupTheme="@style/Theme.AppCompat.Light.DarkActionBar"
      >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

      <ImageView
          android:id="@+id/imgBack"
          android:layout_width="@dimen/_32sdp"
          android:layout_height="match_parent"
          android:contentDescription="@string/app_name"
          android:padding="@dimen/_5sdp"
          android:src="@drawable/ico_arrow_back_svg"
          />

      <TextView
          android:id="@+id/toolbar_title"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_gravity="center"
          android:fontFamily="@font/roboto_black"
          android:gravity="center"
          android:text="@string/str_customer_care"
          android:textColor="@android:color/white"
          android:textSize="@dimen/_12sdp"
          />
    </FrameLayout>

  </android.support.v7.widget.Toolbar>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/_10sdp"
      android:background="@drawable/layout_white_background"
      android:gravity="center"
      android:orientation="vertical"
      android:padding="@dimen/_5sdp"
      tools:ignore="UseCompoundDrawables"
      >

    <ImageView
        android:layout_width="@dimen/_56sdp"
        android:layout_height="@dimen/_56sdp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/app_logo"
        />

    <ImageView
        android:id="@+id/imgBanner"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_80sdp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/app_banner"
        />

  </LinearLayout>

  <!-- Business Contact Layout -->
  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/_5sdp"
      app:cardCornerRadius="@dimen/_5sdp"
      app:elevation="@dimen/_4sdp"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_2sdp"
        >

      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_gravity="center"
          android:fontFamily="@font/roboto_medium"
          android:gravity="center"
          android:padding="@dimen/_5sdp"
          android:text="@string/str_contact_us"
          android:textColor="@color/colorBlack"
          android:textSize="@dimen/_13sdp"
          />

      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginBottom="@dimen/_2sdp"
          android:background="@color/monsoon"
          />

      <TextView
          android:id="@+id/txtContactNumber"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:autoLink="phone"
          android:drawableLeft="@drawable/ico_small_phone_svg"
          android:drawablePadding="@dimen/_11sdp"
          android:drawableStart="@drawable/ico_small_phone_svg"
          android:fontFamily="@font/roboto_medium"
          android:gravity="center|start"
          android:padding="@dimen/_8sdp"
          android:text="Support Number : +91 12345 67890"
          android:textColor="@color/oil"
          android:textSize="@dimen/_12sdp"
          />

      <TextView
          android:id="@+id/txtContactEmail"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:autoLink="email"
          android:drawableLeft="@drawable/ico_small_mail_svg"
          android:drawablePadding="@dimen/_11sdp"
          android:drawableStart="@drawable/ico_small_mail_svg"
          android:fontFamily="@font/roboto_medium"
          android:gravity="center|start"
          android:padding="@dimen/_8sdp"
          android:text="Support Email : support@foodsome.com"
          android:textColor="@color/oil"
          android:textSize="@dimen/_12sdp"
          />

    </LinearLayout>

  </android.support.v7.widget.CardView>

</LinearLayout>

