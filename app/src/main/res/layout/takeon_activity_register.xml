<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      tools:context=".ui.loginregister.LoginActivity"
      >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

      <View
          android:layout_width="match_parent"
          android:layout_height="@dimen/_250sdp"
          android:background="@drawable/top_gradient_background"
          />

      <ImageView
          android:id="@+id/imgLogo"
          android:layout_width="@dimen/_130sdp"
          android:layout_height="@dimen/_130sdp"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="@dimen/_40sdp"
          android:background="@drawable/image_round_background"
          android:contentDescription="@string/app_name"
          android:padding="@dimen/_10sdp"
          android:src="@drawable/app_logo"
          />

      <TextView
          android:id="@+id/txtSignUp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/imgLogo"
          android:layout_marginTop="@dimen/_10sdp"
          android:fontFamily="@font/roboto_black"
          android:gravity="center"
          android:padding="@dimen/_5sdp"
          android:text="@string/str_sign_up"
          android:textColor="@color/colorWhite"
          android:textSize="@dimen/_18sdp"
          android:textStyle="bold"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/txtSignUp"
          android:layout_marginEnd="@dimen/_10sdp"
          android:layout_marginLeft="@dimen/_10sdp"
          android:layout_marginRight="@dimen/_10sdp"
          android:layout_marginStart="@dimen/_10sdp"
          android:layout_marginTop="@dimen/_10sdp"
          android:background="@drawable/main_shadow_background"
          android:orientation="vertical"
          android:padding="@dimen/_10sdp"
          >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:background="@drawable/edt_shadow_background"
            android:orientation="vertical"
            >

          <EditText
              android:id="@+id/edtUserName"
              android:layout_width="match_parent"
              android:layout_height="@dimen/_36sdp"
              android:background="@null"
              android:drawableLeft="@drawable/ico_avatar_svg"
              android:drawablePadding="@dimen/_15sdp"
              android:drawableStart="@drawable/ico_avatar_svg"
              android:fontFamily="@font/roboto_medium"
              android:hint="@string/str_user_name"
              android:inputType="textCapWords"
              android:padding="@dimen/_8sdp"
              android:textSize="@dimen/_12sdp"
              />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:background="@drawable/edt_shadow_background"
            android:orientation="vertical"
            >

          <EditText
              android:id="@+id/edtMobile"
              android:layout_width="match_parent"
              android:layout_height="@dimen/_36sdp"
              android:background="@null"
              android:drawableLeft="@drawable/ico_phone_svg"
              android:drawablePadding="@dimen/_15sdp"
              android:drawableStart="@drawable/ico_phone_svg"
              android:fontFamily="@font/roboto_medium"
              android:hint="@string/str_mobile"
              android:inputType="number"
              android:maxLength="10"
              android:padding="@dimen/_8sdp"
              android:textSize="@dimen/_12sdp"
              />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:background="@drawable/edt_shadow_background"
            android:orientation="vertical"
            >

          <EditText
              android:id="@+id/edtEmail"
              android:layout_width="match_parent"
              android:layout_height="@dimen/_36sdp"
              android:background="@null"
              android:drawableLeft="@drawable/ico_mail_svg"
              android:drawablePadding="@dimen/_15sdp"
              android:drawableStart="@drawable/ico_mail_svg"
              android:fontFamily="@font/roboto_medium"
              android:hint="@string/str_email"
              android:inputType="textEmailAddress"
              android:padding="@dimen/_8sdp"
              android:textSize="@dimen/_12sdp"
              />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:background="@drawable/edt_shadow_background"
            android:orientation="vertical"
            >

          <EditText
              android:id="@+id/edtPassword"
              android:layout_width="match_parent"
              android:layout_height="@dimen/_36sdp"
              android:background="@null"
              android:drawableLeft="@drawable/ico_password_svg"
              android:drawablePadding="@dimen/_15sdp"
              android:drawableStart="@drawable/ico_password_svg"
              android:fontFamily="@font/roboto_medium"
              android:hint="@string/str_password"
              android:inputType="textPassword"
              android:padding="@dimen/_8sdp"
              android:textSize="@dimen/_12sdp"
              />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:background="@drawable/edt_shadow_background"
            android:orientation="vertical"
            >
          <TextView
              android:id="@+id/txtBirthDate"
              android:layout_width="match_parent"
              android:layout_height="@dimen/_36sdp"
              android:background="@null"
              android:drawableLeft="@drawable/ico_birth_date_svg"
              android:drawablePadding="@dimen/_15sdp"
              android:drawableStart="@drawable/ico_birth_date_svg"
              android:fontFamily="@font/roboto_medium"
              android:gravity="center|start"
              android:hint="@string/str_birth_date"
              android:padding="@dimen/_8sdp"
              android:textSize="@dimen/_12sdp"
              />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:background="@drawable/edt_shadow_background"
            android:orientation="vertical"
            >

          <EditText
              android:id="@+id/edtGender"
              android:layout_width="match_parent"
              android:layout_height="@dimen/_36sdp"
              android:background="@null"
              android:drawableLeft="@drawable/ico_gender_svg"
              android:drawablePadding="@dimen/_15sdp"
              android:drawableStart="@drawable/ico_gender_svg"
              android:fontFamily="@font/roboto_medium"
              android:hint="@string/str_gender"
              android:inputType="textCapWords"
              android:padding="@dimen/_8sdp"
              android:textSize="@dimen/_12sdp"
              />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/edt_shadow_background"
            android:orientation="vertical"
            >
          <TextView
              android:id="@+id/txtCity"
              android:layout_width="match_parent"
              android:layout_height="@dimen/_36sdp"
              android:background="@null"
              android:drawableLeft="@drawable/ico_location_svg"
              android:drawablePadding="@dimen/_15sdp"
              android:drawableStart="@drawable/ico_location_svg"
              android:fontFamily="@font/roboto_medium"
              android:gravity="center|start"
              android:hint="@string/str_city"
              android:padding="@dimen/_8sdp"
              android:textSize="@dimen/_12sdp"
              />

        </LinearLayout>
      </LinearLayout>

    </RelativeLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnSignUp"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_32sdp"
        android:layout_gravity="center"
        android:layout_marginTop="-35dp"
        android:background="@drawable/btn_shadow_background"
        android:fontFamily="@font/roboto_black"
        android:text="@string/str_sign_up"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_12sdp"
        />

    <TextView
        android:id="@+id/txtLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:text="@string/str_already_account"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_11sdp"
        android:textStyle="bold"
        />

  </LinearLayout>
</android.support.v4.widget.NestedScrollView>
